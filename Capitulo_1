/*
//imprime un programa que imprima el histograma de las longitudes de las palabras
#include <stdio.h>
#include <stdlib.h>


int main()
{
    int arreglo[20];
    char c;
    int i,j,cont=0;
    for (i=0;i<20;i++)
        arreglo[i]=0;
    while((c=getchar())!=EOF)
    {
        if (c==' ')
            cont++;
        else
            arreglo[cont]++;
    }
    for(i=0;i<20;i++)
    {
        for (j=0;j<arreglo[i];j++)
        {
            printf("*");
        }
        printf("\n");
    }
}
*/
/*

//imprime un programa que imprima el histograma de la cantidad de veces que aparece un caracter
#include <stdio.h>
#include <stdlib.h>


int main()
{
    int arreglo[26];
    int i,j,cont=0;
